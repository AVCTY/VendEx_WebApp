    <!-- Start of article-->

    <article class="enquiry-article">
        <!-- Short foreword -->
        <div class="foreword">
            <p>Our team understands that you may have questions regarding the vending machines that we provide. Don't worry, let us know your worries by filling in your contact detils and we'll get back to you the soonest.</p>
        </div>
        <h2>Fill in the details below</h2>
        <!-- Start of form -->
        <div class="container" id="container">
            <form action="mailto:" method="POST" enctype="text/plain" name="rent_enquiry">
                <fieldset>
                    <!-- Personal Information -->
                    <legend>Personal Information: </legend>
                    <div class="row">
                        <div class="col30"><label for="fname">First name <span class="asterisk">*</span></label></div>
                        <div class="col70"><input type="text" name="fname" pattern="[A-Za-z]+" id="fname" required="required" placeholder="Enter your first name here" size="30" autofocus="autofocus" maxlength="25" /></div>
                    </div>
                    <div class="row">
                        <div class="col30"><label for="lname">Last name <span class="asterisk">*</span></label></div>
                        <div class="col70"><input type="text" name="lname" pattern="[A-Za-z]+" id="lname" required="required" placeholder="Enter your last name here" size="30" maxlength="25" /></div>
                    </div>
                    <div class="row">
                        <div class="col30"><label for="email">Email <span class="asterisk">*</span></label></div>
                        <div class="col70"><input type="email" name="email" id="email" required="required" placeholder="Enter your email here" size="30" /></div>
                    </div>
                    <div class="row">
                        <div class="col30"><label for="tel">Contact number <span class="asterisk">*</span></label></div>
                        <div class="col70"><input type="text" name="tel" id="tel" required="required" placeholder="Enter your contact number here" size="30" pattern="(\01)[0-46-9]*[0-9]{7,8}" maxlength="10" />
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <!-- Address -->
                    <legend>Contact Address: </legend>
                    <div class="row">
                        <div class="col30"><label for="street">Street address</label></div>
                        <div class="col70"><input type="text" maxlength="40" size="30" required="required" name="street address" id="street" placeholder="Street Address" /></div>
                    </div>
                    <div class="row">
                        <div class="col30"><label for="city">City/Town</label></div>
                        <div class="col70"><input type="text" maxlength="20" size="30" required="required" name="city" id="city" placeholder="City/Town" /></div>
                    </div>
                    <div class="row">
                        <div class="col30"><label for="state">State</label></div>
                        <div class="col70">
                            <select name="state" id="state">
                            <option value="johor">Johor</option>
                            <option value="kedah">Kedah</option>
                            <option value="kelantan">Kelantan</option>
                            <option value="kuala lumpur">Kuala Lumpur</option>
                            <option value="labuan">Labuan</option>
                            <option value="melaka">Melaka</option>
                            <option value="negeri sembilan">Negeri Sembilan</option>
                            <option value="pahang">Pahang</option>
                            <option value="perak">Perak</option>
                            <option value="perlis">Perlis</option>
                            <option value="pulau pinang">Pulau Pinang</option>
                            <option value="putrajaya">Putrajaya</option>
                            <option value="sabah">Sabah</option>
                            <option value="sarawak">Sarawak</option>
                            <option value="selangor">Selangor</option>
                            <option value="terengganu">Terengganu</option>
                        </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col30"><label for="postcode">Postcode</label></div>
                        <div class="col70"><input type="text" maxlength="5" size="30" required="required" name="postcode" id="postcode" pattern="\d{1,5}" placeholder="Postcode" /></div>
                    </div>
                </fieldset>
                <fieldset>
                    <!-- Product -->
                    <legend>Product Details: </legend>
                    <div class="row">
                        <div class="col30"><label for="product">Product <span class="asterisk">*</span></label></div>
                        <div class="col70">
                            <select name="product" id="product">
                            <optgroup label="Cold Drinks Vending Machine">
                                <option value="cold1">Vex45 Media Touch</option>
                                <option value="cold2">Vex69 Media Touch</option>
                                <option value="cold3">Gatorade Cold Drinks</option>
                                <option value="cold4">Coke Cold Drinks</option>
                                <option value="cold5">Pepsi Cold Drinks</option>
                                <option value="cold6">Xeno700 Cold Drinks</option>
                            </optgroup>
                            <optgroup label="Hot Drinks Vending Machine">
                                <option value="hot1">Wittenborg 9100 Hot Drinks</option>
                                <option value="hot2">Coffetek Vitro Espresso</option>
                                <option value="hot3">Flavia Creation 400</option>
                                <option value="hot4">Keurig Brewing Systems</option>
                                <option value="hot5">Coffee Stations</option>
                            </optgroup>
                            <optgroup label="Snacks Vending Machine">
                                <option value="snack1">Snax45 Media Touch</option>
                                <option value="snack2">Snax69 Media Touch</option>
                                <option value="snack3">VenMaster Snacks</option>
                                <option value="snack4">VenMaster 2 Snacks</option>
                                <option value="snack5">Venfinity Snakcs</option>
                                <option value="snack6">Snac420 Snacks</option>
                            </optgroup>
                        </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col30"><label for="dur">Rental Duration (months) <span class="asterisk">*</span> </label></div>
                        <div class="col70"><input type="number" name="rental_duration" min="0" max="100" required="required" id="dur" value="1" /></div>
                    </div>
                    <div class="row">
                        <div class="col30"><label for="comment">Remark </label></div>
                        <div class="col70">
                            <textarea name="comment" id="comment" cols="30" rows="5" placeholder="Enter your remark here (Optional)"></textarea>
                        </div>
                    </div>
                </fieldset>
                <!-- Submit and reset buttons-->
                <div class="buttons">
                    <input type="submit" value="Submit" />
                    <input type="reset" value="Cancel" />
                </div>
            </form>
            <!-- End of form -->
        </div>
    </article>
